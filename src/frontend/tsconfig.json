{
  "compilerOptions": {
    "jsx": "react",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
        "*": ["node_modules/*", "src/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
  ],
  "compileOnSave": false
}
