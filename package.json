{
  "name": "yale_college_hub",
  "version": "1.0.0",
  "main": "app.ts",
  "author": "tuckermoses <john.tucker.moses@gmail.com>",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app.ts",
    "migrate": "yarn prisma migrate dev",
    "seed": "yarn prisma db seed",
    "initialize": "yarn prisma migrate dev && yarn prisma db seed",
    "lint": "yarn eslint --max-warnings 0 'src/**/*.{js,ts,tsx}'"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-cas": "^0.0.3",
    "stripe": "^8.219.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.7",
    "@types/node": "^16.18.62",
    "@types/passport": "^1.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^2.3.1",
    "prisma": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript"
    ],
    "plugins": [
      "prettier",
      "import"
    ],
    "ignorePatterns": [
      "/src/frontend/package.json",
      "/src/frontend/webpack.config.js"
    ],
    "rules": {
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "no-undef": 0,
      "@typescript-eslint/no-unused-vars": [
        1,
        {
          "ignoreRestSiblings": true
        }
      ]
    },
    "settings": {
      "import/extensions": [
        ".js",
        ".ts"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  }
}
